@{
    ViewData["Title"] = "Home Page";
}

@model UserDetailsViewModel



    <div class="input-group">

        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <label> Select by Month</label>
            @Html.DropDownListFor(x => x.MonthSelected, new SelectList(Enum.GetValues(typeof(SupportTuoiBeo.Data.EnumThang))))
            <input type="submit" value="Filter" />
            <label> Total @Model.MonthSelected : @string.Format("{0:0,0}", Model.TotalMonthSelected)</label>
        }

        <span class="input-group-prepend">
            <div class="input-group-text bg-transparent border-right-0">
                <i class="fa fa-search"></i>
            </div>
        </span>
    </div>

<div class="text-center">
    <table class="table">
        <caption>List of users</caption>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ngay</th>
                <th scope="col">Thang</th>
                <th scope="col">Ma KH</th>
                <th scope="col">Tinh</th>
                <th scope="col">PHAI THANH TOAN</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.UserDetails)
            {
                <tr>
                    <th scope="row">@row.Id</th>
                    <td>@row.Ngay</td>
                    <td>@row.Thang</td>
                    <td>@row.MaKH</td>
                    <td>@row.Tinh</td>
                    <td>@string.Format("{0:0,0}", @row.TienThanhToan)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
